# KaiSign Subgraph Endpoint
NEXT_PUBLIC_KAISIGN_GRAPH_URL=https://api.studio.thegraph.com/query/117022/kaisign-subgraph/v0.0.7
KAISIGN_GRAPH_ENDPOINT=https://api.studio.thegraph.com/query/117022/kaisign-subgraph/v0.0.7

# IPFS/Pinata Configuration
# Get these from your Pinata account: https://app.pinata.cloud/keys
NEXT_PUBLIC_PINATA_JWT=your_jwt_token_here

# Alternative: API Key + Secret (if not using JWT)
NEXT_PUBLIC_IPFS_API_KEY=your_api_key_here
NEXT_PUBLIC_IPFS_API_SECRET=your_api_secret_here

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key_here
# Configuration
USE_MOCK=false

# Node environment
NODE_ENV=development

# Next.js environment variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_VERCEL_URL=localhost:3000

# RealityETH Subgraph URL for querying reality.eth questions
NEXT_PUBLIC_REALITY_ETH_GRAPH_URL="https://api.studio.thegraph.com/query/117022/reality-eth-sepolia/v0.0.1"

# For Railway deployment
PORT=8000

